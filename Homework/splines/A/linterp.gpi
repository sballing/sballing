set terminal png
set output "linterp.png"
set key below
set xlabel "$x$"
set ylabel "$y$"
set mtics 1
set grid
plot [][]\
	"out.txt" index 0 using 1:2 with points pointtype 17 title "Data points - sin($x$)"\
	,"out.txt" index 1 using 1:2 with lines title "Linear interpolation"\
	,"out.txt" index 1 using 1:3 with lines title "Integral - should be cos($x$)"
